@using MyEvernote.WebApp.ViewModels
@model LoginViewModel

@{
    ViewBag.Title = "Login Page";
}

<link href="~/Content/Login-register.css" rel="stylesheet" />

@using (Html.BeginForm())
{
    <!------ Include the above in your HEAD tag ---------->
    <section class="login-info">
        <div class="container">
            <div class="row main">
                <div class="form-header">
                    <h1 class="text-center ">Login </h1>
                </div>
                <div class="main-content">

                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.Username, new { @class = "form-control", placeholder = "Username" })
                        
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.Password, new { @class = "form-control",
                        placeholder = "Password", type =  "password"})
                    </div>

                    <div class="form-group ">
                        <button href="#" type="submit" class="btn btn-danger btn-lg btn-block login-button">Login</button>
                    </div>


                </div>
            </div>
        </div>
    </section>

}

@*jquerry block for hiding footer*@
<script>
    $(function () {

        $("footer").parent().hide();

    });
</script>

