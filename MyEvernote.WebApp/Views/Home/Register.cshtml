@using MyEvernote.WebApp.ViewModels
@model RegisterViewModel

@{
    ViewBag.Title = "Register Page";
}

<link href="~/Content/Login-register.css" rel="stylesheet" />

<style type="text/css">
    .validation-summary-errors
    {
        border:2px dotted   #a94442;
        background-color: #d76663;
        border-radius: 8px;
    }
    .validation-summary-errors ul{
        list-style-type: none;
        padding: 10px;
        color: #fff;
    }

</style>

@using (Html.BeginForm())
{
    <!------ Include the above in your HEAD tag ---------->
    <section class="login-info">
        <div class="container">
            <div class="row main">
                <div class="form-header">
                    <h1 class="text-center ">Register Form </h1>
                </div>
                <div class="main-content">

                    @Html.ValidationSummary(false)  @*required fields*@

                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.Username, new { @class = "form-control", placeholder = "Username" })
                    </div>

                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Email" })
                    </div>

                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.Password, new
                        {
                            @class = "form-control",
                            placeholder = "Password",
                            type = "password"
                        })
                    </div>

                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.RePassword, new
                        {
                            @class = "form-control",
                            placeholder = "Retype Password",
                            type = "password"
                        })
                    </div>

                </div>


                <div class="form-group ">
                    <button href="#" type="submit" class="btn btn-danger btn-lg btn-block login-button">Register</button>
                </div>


            </div>
        </div>
    </section>

}

@*jquerry block for hiding footer*@
<script>
    $(function () {

        $("footer").parent().hide();

    });
</script>

